{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<section>
    <h1>Admin Controller</h1>

    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Cumque ut at sapiente nulla, repudiandae voluptatibus.</p>
    <a href="{{ path('home') }}">Home</a><br>

    {% for photo in photos %}
        <div class="js-photo-wrapper" data-photo-id="{{ photo.id }}">
            <p>{{ photo.description }}</p>
    		<a href="{{ path('show_photo', { 'photo': photo.id })}}"><img class="js-photo" src="{{ asset('photos/' ~ photo.filename) | imagine_filter('squared_thumbnail') }}" alt="{{ photo.description }}"></a><br>
    		<button 
                class="js-photo-approve" 
                data-photo-id="{{ photo.id }}">
                Approve
            </button>

            <button 
                class="js-photo-deny" 
                data-photo-id="{{ photo.id }}">
                Deny
            </button>
        </div>

    {% endfor %}
</section>
{% endblock %}
