{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}
<section>
    <h1>Register</h1>

    {{ form_start(form) }}
	    {{ form_row(form.username) }}
	    {{ form_row(form.email) }}
	    {{ form_row(form.plainPassword.first) }}
	    {{ form_row(form.plainPassword.second) }}
	    <button type="submit">Register!</button>
	{{ form_end(form) }}
</section>
{% endblock %}
